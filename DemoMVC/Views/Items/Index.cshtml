@model IEnumerable<DemoMVC.Models.Item>
@{
    @* ViewData["Title"] = "Index"; *@
}

<div class="text-center">  
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Add", "Items")'">Add</button>
</div>
@if(Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th asp-for="Name">Name</th>
                <th asp-for="Price">Price</th>
                <th asp-for="Description">Description</th>
                <th asp-for="ItemCount"> Items Count</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.Specs?.ItemCount</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary">Edit</a>
                       
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>Total</tr>
            <tr>@Model.Sum(item => item.Price)</tr>
        </tfoot>
    </table>
}